{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "clang++ build active file",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=c++11",
          "-stdlib=libc++",
          "-g",
          "${fileDirname}/../main.cpp",
          "${fileDirname}/../seq/seq_alg.cpp",
          "-o",
          "${fileDirname}/main"
        ], 
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }